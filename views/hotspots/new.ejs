<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add a New Hotspot</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/hotspots" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Address">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="range" placeholder="Range of Zone(Km)">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="source" placeholder="Source of Information">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/">Go Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>

